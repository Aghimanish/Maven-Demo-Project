<?xml version='1.0' encoding='UTF-8'?>
<jenkins-jobs>
	<jenkins-job>
		<template>BASIC-JAVA-PIPELINE</template>
			<build>
				<property>
					<name>command</name>
					<value>install</value>
				</property>
				<property>
					<name>labelExpr</name>
					<value>jenkins_linux_slave</value>
				</property>
				<property>
					<name>buildType</name>
					<value>pipeline</value>  
				</property>
			</build>
			<sonar>
			<property> 
					<name>sonarBranchName</name>
					<value>master</value>
				</property>
				<property>
				<name>sonarSources</name>
				<value></value>
			</property>
			</sonar>
			<artifactory> 
			<property>
				<name>artifactory-repo</name>
				<value>CI-Automation-JAVA-Pipeline</value>
			</property>
		</artifactory>
		<performance-run>
			<property>
				<name>p-pom</name>
				<value>DemoSampleApp_Jmeter</value>
			</property>
			<property>
				<name>p-port</name>
				<value>8090</value>
			</property>
			<property>
				<name>p-context</name>
				<value>devopssampleapplication</value>
			</property>
		</performance-run>
		<selenium-run>
			<property>
				<name>s-pom</name>
				<value>DemoSampleApp_selenium</value>
			</property>
			<property>
				<name>s-port</name>
				<value>8090</value>
			</property>
			<property>
				<name>s-context</name>
				<value>devopssampleapplication</value>
			</property>
		</selenium-run>
		<jira> 
			<property>
				<name>project</name>
				<value>DEVOC</value>
			</property>
			<property>
				<name>id</name>
				<value>DEVOC-322</value>
			</property>
			<property>
				<name>comment</name>
				<value>Pipeline has been successfully executed</value>
			</property>
		</jira>
		<!-- Docker Plugin-->
		<docker-run>
			<property>
				<name>image</name>
				<value>tomcat:latest</value>
			</property>
			<property>
				<name>volumesString</name>
				<value>devopssampleapplication.war</value>
			</property>
			<property>
				<name>bindPorts</name>
				<value>8090:8080</value>
			</property>
		</docker-run>
		<docker-compliance>
			<property>
				<name>dockercomplianceimages</name>
				<value>tomcat:21</value>
			</property>
		</docker-compliance>
        </jenkins-job>
</jenkins-jobs>